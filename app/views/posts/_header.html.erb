<% replace :page_header do %>
    <h1>
        <%= link_to image_tag(
                @user.avatar,
                size: "100",
                class: "img-thumbnail"
            ), @user.avatar
        %>
        <%=link_to @user.name, user_repos_path(@user) %> /
        <%= link_to @repo.name, user_repo_posts_path(@user, @repo.name) %>
    </h1>
    <p>Project description</p>
    <% if can? :create, Post.new(user_id: @user.id) %>
        <%= link_to new_user_repo_post_path, class: "btn btn-sm btn-primary" do %>
            <%= fa_icon "file" %> Add a new post
        <% end %>
    <% end %>
<% end %>
